<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/productNameETC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAVE L SOFTPACK 200 SHEETS"
                    android:textSize="30sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCream"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="top">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TERMASUK PPN"
                        android:textSize="20sp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp"
                        android:textSize="35sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/salePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="11dp"
                            android:gravity="end"
                            android:text="2.000.000"
                            android:textAlignment="textEnd"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:gravity="center"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/barcodeETC"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:textSize="45sp"
                            android:fontFamily="@font/ean13"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/productCodeETC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8999275912031"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/vendorNameETC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="THE UNIVENUS PT (PB)"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:layout_marginLeft="10dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/vendorCD"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="3000000"
                                android:layout_alignParentBottom="true"
                                android:textAlignment="textEnd"
                                android:textSize="15sp"
                                tools:ignore="RtlCompat" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorEditTextBG">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Product"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/statusProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pos Price"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/posPriceETC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200000"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales Stock"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/salesStockETC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="575"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Stock"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/bookStockETC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ON ORDER QTY"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/on_order_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pack"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/pack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protect Tag"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/protectTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:gravity="end" />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorRed"
                android:paddingBottom="20dp"
                android:weightSum="3"
                android:padding="5dp"
                android:gravity="center">
                <Button
                    android:background="@drawable/circle_imagebutton"
                    android:id="@+id/shortage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Shortage"
                    android:textColor="@color/colorRed"
                    android:layout_weight="1"/>
                <Button
                    android:background="@drawable/circle_imagebutton"
                    android:id="@+id/tagPrint"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorRed"
                    android:layout_width="40dp"
                    android:text="Tag Print"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/waste"
                    android:background="@drawable/circle_imagebutton"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorRed"
                    android:text="Waste"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</ScrollView>